module types

imports 
  libwebdsl-front
  libwebdsl-generator
  entities
  util

rules // primitive types
  
  is-primitive-type =
    is-simple-sort
   
  is-string-type =
    StringCompatible

  is-ent-type = 
    where(SimpleSort(EntDecl))
  
  is-simple-type = 
    is-primitive-type <+ is-ent-type  
    
rules

  check :
    SimpleSort(x) -> (x, $[Type '[x]' is not defined])
    where require(is-simple-type)
  
