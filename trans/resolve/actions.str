module resolve/actions

imports
  libwebdsl-front
  libwebdsl-generator
  resolve/-
  
rules

  declaration-of: ActionCall(name, arg*) -> decl
    where decl := <ActionDefinition> name
    
  declaration-of: tc@ThisCall(name, arg*) -> decl
    where get-anno(?IsReturnInAction())
        ; decl := <declaration-of> PageCall(name, arg*)
  
  hover: Action(name, arg*, _) -> text
    with text := <concat-strings> ["action ",name,"(",<pp-args> arg*,")"]
    
  