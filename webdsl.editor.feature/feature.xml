<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="webdsl.editor.feature"
      label="WebDSL Editor"
      version="1.2.9.qualifier"
      plugin="webdsl.editor">

   <description url="http://webdsl.org">
      An Eclipse editor for WebDSL applications.
   </description>

   <license>
      This is the WebDSL Editor Plugin license agreement.
   </license>

   <url>
      <update label="webdsl.org" url="http://webdsl.org/update/"/>
      <discovery label="Spoofax/IMP" url="http://download.spoofax.org/update/stable"/>
   </url>

   <includes
         id="org.strategoxt.imp"
         version="0.0.0"
         search-location="both"/>
   <includes
         id="org.strategoxt.imp.meta"
         version="0.0.0"
         search-location="both"/>

   <requires>
      <import feature="org.eclipse.jst.enterprise_core.feature" version="3.1.1" match="greaterOrEqual"/>
      <import feature="org.eclipse.jst.enterprise_ui.feature" version="3.1.1" match="greaterOrEqual"/>
      <import feature="org.eclipse.jst.enterprise_userdoc.feature" version="3.1.0" match="greaterOrEqual"/>
      <import feature="org.eclipse.jst.server_adapters.ext.feature" version="3.1.1" match="greaterOrEqual"/>
      <import feature="org.eclipse.jst.server_adapters.feature" version="3.2.0" match="greaterOrEqual"/>
      <import feature="org.eclipse.wst.server_adapters.feature" version="3.2.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="webdsl.editor"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

</feature>
